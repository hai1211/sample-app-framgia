<% @user ||= current_user %>
<div class="stats">
  <%= link_to relationships_path user_id: @user.id, is_following: true do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "partial.stat.following" %>
  <% end %>
  <%= link_to relationships_path user_id: @user.id do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "partial.stat.followers" %>
  <% end %>
</div>
