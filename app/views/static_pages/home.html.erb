<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "home.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "home.header" %></h1>

    <h2>
      <%= t "home.content1" %>
      <%= link_to t("home.link"), href="http://www.railstutorial.org/" %>
      <%= t "home.content2" %>
    </h2>

    <%= link_to t("home.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: t("home.rails_logo")),
    "http://rubyonrails.org/" %>
  <%= link_to image_tag("kitten.jpg", alt: t("home.kitten_logo")),
    "http://rubyonrails.org/" %>
<% end %>
