<% provide :title, t("user.edit.title") %>
<% provide :button_text, t("user.edit.submit_btn") %>
<h1><%= t "user.edit.header" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("user.edit.change"),
        "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
